# =========================================
# SGI Backend — Variables de Entorno
# =========================================
# Copia este archivo como .env y rellena los valores.

# Base de datos (SQL Server)
DB_SERVER=tu_servidor
DB_NAME=nombre_base_datos
DB_USER=usuario
DB_PASS=contraseña
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_ECHO=false

# Seguridad / JWT
SECRET_KEY=tu_clave_secreta_aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS (separar por comas los orígenes permitidos)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# WhatsApp Cloud API (opcional)
WHATSAPP_TOKEN=tu_token_aqui
WHATSAPP_PHONE_ID=tu_phone_id_aqui
WHATSAPP_VERIFY_TOKEN=sgi_token_123

# OpenAI (opcional, para chatbot con IA)
OPENAI_API_KEY=tu_api_key_aqui
